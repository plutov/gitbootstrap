[user]
    #name = USERNAME
    #email = EMAIL
[github]
    #user = GITHUB_USERNAME
    #token = GITHUB_TOKEN - https://github.com/settings/applications
[core]
    excludesfile = ~/.gitignore
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[url "https://github.com/"]
    insteadOf = gh:
[url "https://gist.github.com/"]
    insteadOf = gist:
[url "https://bitbucket.org/"]
    insteadOf = bb:
[color]
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[branch "master"]
    rebase = true
[branch]
    autosetuprebase = always
[alias]
    a = add --all
    ap = apply
    b = branch
    c = commit
    cm = commit -m
    cma = commit --amend
    d = diff
    dc = diff --cached
    f = fetch
    fo = fetch origin
    m = merge
    co = checkout
    ps = push
    pso = push origin
    pl = pull
    plo = pull origin
    plom = pull origin master
    plrb = pull --rebase
    plrbo = pull --rebase origin
    rb = rebase
    re = reset
    reh = reset --hard
    reho = reset --hard remotes/origin/HEAD
    r = remote
    s = status
    sa = stash apply
    sl = stash list
    sp = stash pop
    ss = stash save

    l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    lc = log ORIG_HEAD.. --no-merges --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged

    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    unassumeall = !git assumed | xargs git update-index --no-assume-unchanged

    subup = submodule update --init
